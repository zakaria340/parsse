<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet"
          href="{{ asset('assets/vendor/semantic/dist/semantic.min.css') }}">
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block stylesheets %}
        <style type="text/css">
            body {
                background-color: #DADADA;
            }
            .image {
                margin-top: -100px;
            }
            .column {
                max-width: 450px;
            }
        </style>
    {% endblock %}
</head>
<body>
<div class="ui borderless main menu">
    <div class="ui text container">
        <a href="{{ path('homepage') }}" class="header item">Home</a>
        <a href="{{ path('documents') }}" class="item">Documents</a>
        <a href="{{ path('users') }}" class="item">Users</a>
    </div>
</div>
<div class="ui middle aligned center aligned grid">

    <div class="column">
        {% block body %}{% endblock %}
    </div>
</div>
{% block javascripts %}{% endblock %}
</body>
</html>
