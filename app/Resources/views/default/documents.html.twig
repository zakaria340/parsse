{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="ui  form">
        <div class="two fields">
            <div class="field">
                <label for="form_submitFile" class="ui icon button">
                    <i class="file icon"></i>
                    Open File</label>
                <div style="display: none">
                    {{ form_widget(form.submitFile) }}
                </div>
            </div>
            <div class="field">
                {{ form_widget(form.save, { 'attr': {'class': 'ui icon button'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    {% if users is not empty %}
        <table class="ui striped table">
            <thead>
            <tr>
                <th>Matricule</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Fichier</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.code }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.email }}</td>
                    {% if user.exist %}
                    <td>
                        <a target="_blank"
                           href="{{ path('viewDocument', {'code': user.code}) }}">Document</a>
                    </td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
